<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FacActionsCountControl.Control.Views.ControlView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:FacActionsCountControl.Control.ViewModels"
    xmlns:views="clr-namespace:FacActionsCountControl.Control.Views"
    Title="Control"
    x:DataType="viewModels:IControlViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Padding="0,5,0,5"
            Background="Black"
            StrokeShape="RoundRectangle 5,5,5,5"
            StrokeThickness="0.5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <views:KeyValueView
                    Key="Current"
                    Grid.Column="0"
                    Value="{Binding Overview.CurrentPlayer}" />
                <views:KeyValueView
                    Key="Next"
                    Grid.Column="1"
                    Value="{Binding Overview.NextValue}" />
                <views:KeyValueView
                    Key="Turn"
                    Grid.Column="2"
                    Value="{Binding Overview.Turn}" />
                <views:KeyValueView
                    Key="Time"
                    Grid.Column="3"
                    Value="{Binding Overview.PlayerTime}" />
            </Grid>
        </Border>

        <Border
            Grid.Row="3"
            Grid.Column="1"
            Padding="0,5,0,5"
            Background="Black"
            StrokeShape="RoundRectangle 5,5,5,5"
            StrokeThickness="0.5">
            <StackLayout>
                <views:KeyValueView Key="Draw" Value="{Binding ActionsCount.Draw}" />
                <views:KeyValueView Key="Summon" Value="{Binding ActionsCount.Summon}" />
                <views:KeyValueView Key="Spell" Value="{Binding ActionsCount.Spell}" />
                <views:KeyValueView Key="Buy" Value="{Binding ActionsCount.Buy}" />
                <views:KeyValueView Key="Attach" Value="{Binding ActionsCount.Attach}" />
                <views:KeyValueView Key="Attack" Value="{Binding ActionsCount.Attack}" />
            </StackLayout>
        </Border>

    </Grid>
</ContentPage>